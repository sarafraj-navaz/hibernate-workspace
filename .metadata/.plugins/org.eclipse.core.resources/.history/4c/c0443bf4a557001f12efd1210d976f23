package pattern;

import java.util.Scanner;

public class Square_Hellow_Pattern {
	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		System.out.println("enter the row number of the square hellow pattern ");
		int row=sc.nextInt();
		System.out.println("enter the column number of the square hellow pattern");
		int col=sc.nextInt();
		
		square_Hellow_Pattern(row,col);
	}
	public static void square_Hellow_Pattern(int r,int c) {
		for(int i=1;i<=r;i++) {
			for(int j=1;j<=c;j++) {
				if(i==1 || j==1||i==r||j==c) {
					System.out.print("*");
				}
			}
		}
	}
}
