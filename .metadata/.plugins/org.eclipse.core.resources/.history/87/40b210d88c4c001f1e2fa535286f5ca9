package number_Based_Programming0;

public class Decimal_to_Binary_otherWay {
	public static void main(String[] args) {
		int n=324;
		while(n>0) {
			int rem=n%10;
			binaryNumber(rem);
			n=n/10;
		}
	}
	public static void binaryNumber(int n) {
		int count=getCount(n);
	}
	public static int getCount(int n) {
		int count=0;
		while(n>0) {
			count++;
			n=n/10;
		}
		return count;
	}

}
