<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">
               
     <!--    this is xml configuration way   -->
     <context:component-scan base-package="com.jsp.spring_core_simple1"/>
     
     <bean id="myId" class="com.jsp.spring_core_simple1.entity.Student"></bean>
     
     
     
     
     <!-- for setter configuration -->
     <bean class="com.jsp.spring_core_simple1.entity.Student" id="settter">
        <property name="id" value="121"></property>
        <property name="name" value="Sarafraj"></property>
        <property name="email" value="S@gmail.com"></property>
     </bean>
     
     
 </beans>    